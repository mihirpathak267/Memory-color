<%- include("partials/header"); -%>

  <div class="p-2 mb-4 bg-light rounded-3">
    <div class="container-fluid py-4 jumbo">
      <!-- <h1 class="display-5 fw-bold heading mb-5">Memory Color</h1> -->
        <p class="instructionp">Welcome to the experiment</p>
        <form class="formbox" action="/user" method="post">
            <div class="form-group agebox">
              <label for="age">Age</label>
              <br>
              <input class="form-control" name="age" id="age" placeholder="Enter age" required pattern="[0-9]+">
              
            </div>
            <div class="genderbox">
            <label for="gender" class="gender">Gender</label>
        
            <select name="gender" id="gender" required>
            <option value="" selected disabled hidden>Choose gender</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
        </select>
      </div>
        <br>
          <div class="btn">
            <button type="submit" class="btn btn-dark">Submit</button>
          </div>
          </form>
    </div>
</div>
<%- include("partials/footer"); -%>